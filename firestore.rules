rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidEmail() {
      return isAuthenticated() &&
             request.auth.token.email != null;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Users can create their profile on first login
      // Must match their authenticated email
      allow create: if isOwner(userId)
        && isValidEmail()
        && request.resource.data.email == request.auth.token.email
        && request.resource.data.uid == userId;

      // Users can update their own profile
      // Cannot change email or uid
      allow update: if isOwner(userId)
        && request.resource.data.email == resource.data.email
        && request.resource.data.uid == resource.data.uid
        && request.resource.data.createdAt == resource.data.createdAt;

      // Users can soft delete their account (set deletedAt)
      allow delete: if isOwner(userId);

      // Preferences subcollection - user can only access their own preferences
      match /preferences/{preferencesId} {
        // Users can read their own preferences
        allow read: if isOwner(userId);

        // Users can create their own preferences
        allow create: if isOwner(userId);

        // Users can update their own preferences
        allow update: if isOwner(userId);

        // Users can delete their own preferences
        allow delete: if isOwner(userId);
      }

      // Projects subcollection - user can only access their own projects
      match /projects/{projectId} {
        // Helper to check if this is the sync metadata document
        function isMetadataDoc() {
          return projectId == '_sync_metadata';
        }

        // Helper to validate project data structure
        function isValidProject() {
          return request.resource.data.keys().hasAll(['name', 'createdAt'])
            && request.resource.data.name is string
            && request.resource.data.name.size() > 0
            && request.resource.data.name.size() <= 100;
        }

        // Users can read their own projects
        allow read: if isOwner(userId);

        // Users can create projects or sync metadata in their own collection
        allow create: if isOwner(userId)
          && (isMetadataDoc() || isValidProject());

        // Users can update their own projects or sync metadata
        allow update: if isOwner(userId)
          && (isMetadataDoc() || isValidProject());

        // Users can delete their own projects
        allow delete: if isOwner(userId);

        // Transactions subcollection under projects
        match /transactions/{transactionId} {
          // Helper to check if this is the sync metadata document
          function isTransactionMetadataDoc() {
            return transactionId == '_sync_metadata';
          }

          // Helper to validate transaction data structure
          function isValidTransaction() {
            return request.resource.data.keys().hasAll(['description', 'amount', 'type', 'category', 'date'])
              && request.resource.data.type in ['income', 'expense']
              && request.resource.data.amount is number
              && request.resource.data.amount >= 0;
          }

          // Users can read their own transactions
          allow read: if isOwner(userId);

          // Users can create transactions or sync metadata in their own project
          allow create: if isOwner(userId)
            && (isTransactionMetadataDoc() || isValidTransaction());

          // Users can update their own transactions or sync metadata
          allow update: if isOwner(userId)
            && (isTransactionMetadataDoc() || isValidTransaction());

          // Users can delete their own transactions
          allow delete: if isOwner(userId);
        }
      }

      // Legacy transactions subcollection - keep for backward compatibility
      // This will be migrated to projects structure
      match /transactions/{transactionId} {
        // Helper to check if this is the sync metadata document
        function isMetadataDoc() {
          return transactionId == '_sync_metadata';
        }

        // Helper to validate transaction data structure
        function isValidTransaction() {
          return request.resource.data.keys().hasAll(['description', 'amount', 'type', 'category', 'date'])
            && request.resource.data.type in ['income', 'expense']
            && request.resource.data.amount is number
            && request.resource.data.amount >= 0;
        }

        // Users can read their own transactions
        allow read: if isOwner(userId);

        // Users can create transactions or sync metadata in their own collection
        allow create: if isOwner(userId)
          && (isMetadataDoc() || isValidTransaction());

        // Users can update their own transactions or sync metadata
        allow update: if isOwner(userId)
          && (isMetadataDoc() || isValidTransaction());

        // Users can delete their own transactions
        allow delete: if isOwner(userId);
      }
    }

    // Pending registrations collection
    // Only Cloud Functions can access this collection
    // The client never directly reads or writes these documents
    match /pendingRegistrations/{token} {
      // Deny all client access
      // Cloud Functions have admin access and bypass these rules
      allow read, write: if false;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
